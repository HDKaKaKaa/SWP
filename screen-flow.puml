@startuml Screen Flow Diagram
!theme plain
skinparam backgroundColor #FFFFFF
skinparam defaultFontSize 10
skinparam rectangle {
    BorderColor #000000
    FontColor #000000
}

skinparam arrow {
    Color #000000
    Thickness 1
}

title Screen Flow Diagram - Food Delivery System

' ============================================
' TOP: PUBLIC & AUTHENTICATION
' ============================================
rectangle "Home Page" as LandingPage #FFFACD

rectangle "User Register" as RegisterPage #FFFACD
rectangle "User Login" as LoginPage #FFFACD
rectangle "Reset Password" as ForgotPasswordPage #FFFACD

' ============================================
' LEFT: SHOPPING FLOW (PUBLIC)
' ============================================
rectangle "Restaurants List" as RestaurantsList
rectangle "Restaurant Details" as RestaurantDetail
rectangle "User Cart" as CartPage
rectangle "Checkout Page" as CheckoutPage
rectangle "Order Success" as OrderSuccessPage
rectangle "Order Details\n(Customer)" as CustomerOrderDetail

' ============================================
' CENTER: POST LOGIN HUB
' ============================================
rectangle "PostLogin" as PostLogin #FFFACD

' ============================================
' RIGHT TOP: CUSTOMER PROFILE & ORDERS
' ============================================
rectangle "User Profile" as CustomerProfile #FFFACD
rectangle "Change Password" as CustomerChangePassword #FFFACD
rectangle "Orders List\n(Customer)" as CustomerOrdersList

' ============================================
' RIGHT MIDDLE: RESTAURANT REGISTRATION
' ============================================
rectangle "Restaurant Registration" as RestaurantRegistration
rectangle "My Registrations" as MyRegistrations
rectangle "Restaurant Edit" as RestaurantEdit

' ============================================
' BOTTOM LEFT: ADMIN DASHBOARD
' ============================================
rectangle "Admin Dashboard" as AdminDashboard
rectangle "Restaurant Approval" as RestaurantApproval
rectangle "Restaurants List\n(Admin)" as AdminRestaurantsList
rectangle "Categories List" as CategoriesList
rectangle "Orders List\n(Admin)" as AdminOrdersList
rectangle "Users List" as AdminUsersList
rectangle "Shippers List" as AdminShippersList

' ============================================
' BOTTOM CENTER: OWNER DASHBOARD
' ============================================
rectangle "Owner Dashboard" as OwnerDashboard
rectangle "Products List" as OwnerProductsList
rectangle "Orders List\n(Owner)" as OwnerOrdersList

' ============================================
' BOTTOM RIGHT: SHIPPER DASHBOARD
' ============================================
rectangle "Shipper Dashboard" as ShipperDashboard
rectangle "Orders List\n(Shipper)" as ShipperOrdersList
rectangle "History List" as ShipperHistoryList
rectangle "Order Details\n(Shipper)" as ShipperOrderDetail
rectangle "Delivery Map" as ShipperMap
rectangle "Shipper Profile" as ShipperProfile

' ============================================
' LAYOUT: TOP ROW
' ============================================
LandingPage -[hidden]- RegisterPage
RegisterPage -[hidden]- LoginPage
LoginPage -[hidden]- ForgotPasswordPage

' ============================================
' LAYOUT: LEFT COLUMN (SHOPPING)
' ============================================
RestaurantsList -[hidden]- RestaurantDetail
RestaurantDetail -[hidden]- CartPage
CartPage -[hidden]- CheckoutPage
CheckoutPage -[hidden]- OrderSuccessPage
OrderSuccessPage -[hidden]- CustomerOrderDetail

' ============================================
' LAYOUT: RIGHT COLUMN (CUSTOMER)
' ============================================
CustomerProfile -[hidden]- CustomerChangePassword
CustomerProfile -[hidden]- CustomerOrdersList

' ============================================
' LAYOUT: BOTTOM ROW (DASHBOARDS)
' ============================================
AdminDashboard -[hidden]- OwnerDashboard
OwnerDashboard -[hidden]- ShipperDashboard

' ============================================
' FLOW: AUTHENTICATION
' ============================================
LandingPage --> RegisterPage
LandingPage --> LoginPage
LandingPage --> RestaurantsList
RegisterPage --> LoginPage
RegisterPage --> PostLogin
LoginPage --> PostLogin
LoginPage --> ForgotPasswordPage
ForgotPasswordPage --> LoginPage

' ============================================
' FLOW: SHOPPING (PUBLIC)
' ============================================
RestaurantsList --> RestaurantDetail
RestaurantDetail --> CartPage
CartPage --> CheckoutPage
CheckoutPage --> OrderSuccessPage
OrderSuccessPage --> CustomerOrderDetail

' ============================================
' FLOW: POST LOGIN TO DASHBOARDS
' ============================================
PostLogin --> AdminDashboard
PostLogin --> OwnerDashboard
PostLogin --> ShipperDashboard
PostLogin --> CustomerProfile
PostLogin --> CustomerOrdersList
PostLogin --> RestaurantRegistration

' ============================================
' FLOW: CUSTOMER PROFILE
' ============================================
CustomerProfile --> CustomerChangePassword
CustomerOrdersList --> CustomerOrderDetail

' ============================================
' FLOW: RESTAURANT REGISTRATION
' ============================================
RestaurantRegistration --> MyRegistrations
MyRegistrations --> RestaurantEdit

' ============================================
' FLOW: ADMIN DASHBOARD
' ============================================
AdminDashboard --> RestaurantApproval
AdminDashboard --> AdminRestaurantsList
AdminDashboard --> CategoriesList
AdminDashboard --> AdminOrdersList
AdminDashboard --> AdminUsersList
AdminDashboard --> AdminShippersList

' ============================================
' FLOW: OWNER DASHBOARD
' ============================================
OwnerDashboard --> OwnerProductsList
OwnerDashboard --> OwnerOrdersList

' ============================================
' FLOW: SHIPPER DASHBOARD
' ============================================
ShipperDashboard --> ShipperOrdersList
ShipperDashboard --> ShipperHistoryList
ShipperHistoryList --> ShipperOrderDetail
ShipperDashboard --> ShipperMap
ShipperDashboard --> ShipperProfile

@enduml

